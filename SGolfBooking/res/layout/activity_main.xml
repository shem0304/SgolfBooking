<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remark2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="게임선수" />

    <EditText
        android:id="@+id/EdtPlayerCount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:ems="10" >

        <requestFocus android:layout_width="wrap_content" />

    </EditText>

    <EditText
        android:id="@+id/EdtLeftRightgubn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EdtPlayerCount"
        android:layout_below="@+id/EdtPlayerCount"
        android:layout_marginTop="30dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EdtLeftRightgubn"
        android:layout_alignTop="@+id/EdtLeftRightgubn"
        android:text="게임선수" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EdtLeftRightgubn"
        android:layout_alignRight="@+id/EdtLeftRightgubn"
        android:layout_below="@+id/EdtLeftRightgubn"
        android:layout_marginTop="18dp" >

        <TextView
            android:id="@+id/hand_phone_no"
            android:layout_width="184dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="38dp"
            android:scrollbars="vertical"
            android:text="TextView" />

    </ScrollView>
    
	<TextView
	 android:id="@+id/txtHello"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:singleLine="true"
	 android:ellipsize="marquee"
	 android:marqueeRepeatLimit ="marquee_forever"
	 android:scrollHorizontally="true"
	 android:textColor="#ffffff"
	 android:background="#000000"
	 android:text="Hello guy! Welcome to gabrielbl.com! Nice to meet you! I'm Vietnames!" />

	<TextView
	    android:id="@+id/remark2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/scrollView"
	    android:layout_centerVertical="true"
	    android:layout_marginTop="16dp"
	    android:text="TextView" />

	<TextView
	    android:id="@+id/booking_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/remark2"
	    android:layout_below="@+id/remark2"
	    android:layout_marginLeft="14dp"
	    android:layout_marginTop="16dp"
	    android:text="TextView" />

	<TextView
	    android:id="@+id/leftright_gubn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/booking_status"
	    android:layout_below="@+id/booking_status"
	    android:layout_marginTop="18dp"
	    android:text="TextView" />

	<TextView
	    android:id="@+id/booking_date_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/leftright_gubn"
	    android:layout_below="@+id/leftright_gubn"
	    android:layout_marginTop="20dp"
	    android:text="TextView" />

	<Button
	    android:id="@+id/btnRegister"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/scrollView"
	    android:layout_below="@+id/booking_date_time"
	    android:text="Button1" />

	<TextView
	    android:id="@+id/game_kind"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/btnRegister"
	    android:layout_alignBottom="@+id/btnRegister"
	    android:layout_alignLeft="@+id/booking_date_time"
	    android:text="TextView" />

	<TextView
	    android:id="@+id/player_count"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/game_kind"
	    android:layout_below="@+id/btnRegister"
	    android:text="TextView" />

</RelativeLayout>